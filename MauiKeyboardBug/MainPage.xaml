<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiKeyboardBug.MainPage">


  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="60"/>
    </Grid.RowDefinitions>
    <WebView Grid.Row="0" x:Name="myWebView"/>
    <Button x:Name="TimerButton" Grid.Row="1" Text="Open new Page in 3 seconds" Clicked="Button_Clicked"/>
  </Grid>

</ContentPage>
